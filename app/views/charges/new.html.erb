<link rel="stylesheet" type="text/css" href="../assets/charges.css.scss">

<!DOCTYPE html>
<html>
  <head>
    <title>Stripe App</title>
    <%= stylesheet_link_tag "application", media: "all",
                                           "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>

<div id="payment-button">
<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"        
          data-amount="500"
          data-email=<%= @user.email %>
          data-name="SimplePickup"
          data-description="A month's subcription to ProjectGo"
          data-image=http://www.simplepickup.com/images/logo1.png                   
          ></script>        
<% end %>
</div>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
